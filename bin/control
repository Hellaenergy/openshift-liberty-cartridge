#!/bin/bash -e
#exit 0

PATH=/bin/:/usr/bin:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start {
    #/usr/sbin/httpd -f $OPENSHIFT_HTTPD_DIR/etc/httpd.conf -k start
    pushd $OPENSHIFT_REPO_DIR
    npm install -d
    npm start -d &
    client_message "debug cart started"
}

function stop {
    #/usr/sbin/httpd -f $OPENSHIFT_HTTPD_DIR/etc/httpd.conf -k stop
    killall node
    client_message "debug cart stopped"
}

function restart {
    #/usr/sbin/httpd -f $OPENSHIFT_HTTPD_DIR/etc/httpd.conf -k restart
    stop
    start
    client_message "debug cart restarted"
}

function status {
  client_message "debug status"
}

function reload {
  client_message "debug status"
}
function tidy {
  client_message "debug status"
}
function pre-build {
  client_message "debug status"
}
function build {
  client_message "debug status"
}
function deploy {
  client_message "debug status"
}
function post-deploy {
  client_message "debug status"
}

function catchall {
    echo "not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      reload ;;
  tidy)        tidy ;;
  pre-build)   pre-build ;;
  build)       build ;;
  deploy)      deploy ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
