#!/bin/bash -e

PATH=/bin/:/usr/bin:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start {
  if [ "$IBM_LIBERTY_LICENSE" == "L-JTHS-95XRL8" ]
  then
    $OPENSHIFT_LIBERTY_DIR/wlp/bin/server start defaultServer &
    client_message "liberty cart started"
  else
    client_message "missing liberty license"
  fi
}

function stop {
  pid=$(cat $OPENSHIFT_LIBERTY_DIR/log/.pid/defaultServer.pid);
  kill $pid
  client_message "liberty cart stopped"
}

function restart {
  stop
  start
  client_message "liberty cart restarted"
}

function status {
  client_message "debug status"
}

function reload {
  client_message "debug reload"
}

function tidy {
  client_message "debug tidy"
}

function pre-build {
  client_message "debug pre-build"
}

function deploy {
  rsync -r --delete ${OPENSHIFT_REPO_DIR}servers/ ${OPENSHIFT_LIBERTY_DIR}wlp/usr/servers/
  client_message "liberty cart deployed"
}

function post-deploy {
  client_message "debug post-deploy"
}

function catchall {
  echo "not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      reload ;;
  tidy)        tidy ;;
  pre-build)   pre-build ;;
  build)       
    ${OPENSHIFT_LIBERTY_DIR}/bin/build
  ;;
  deploy)      deploy ;;
  post-deploy) post-deploy ;;
  *)           exit 0
esac

exit 0
